<% layout('layouts/boilerplate')%>
<link rel="stylesheet" href="stylesheets/style.css">
<div class="row">
    <h1 class="text-center heading">Edit Blog</h1>
    <div class="col-6 offset-3">
        <form action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="blog[title]"
                    value="<%=blog.title %>" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="blog[location]"
                    value="<%=blog.location %>" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image Url</label>
                <input class="form-control" type="text" id="image" name="blog[image]"
                    value="<%=blog.image %>" required>
            </div>
         
            <div class="mb-3">
                <label class="form-label" for="description">Content</label>
                <textarea ros="20" class="form-control" type="text" id="description" name="blog[description]"
                value="<%=blog.description %>" required><%= blog.description%></textarea>
            </div>
            <div class="mb-3">
                <button id="mybtn"  class="btn mybtn btn-info">Update Blog</button>
            </div>
        </form>
        <a href="/blogs/<%= blog._id%>">Go Back</a>

    </div>
</div>