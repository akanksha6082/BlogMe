<% layout('layouts/boilerplate')%>

<h1>Own Blog Space</h1>
<div>
    <a href="/blogs/new"><button class="btn btn-primary btn-md ">Add Blog</button></a>
</div>
<br>
<% for (let blog of blogs){%>
<div class="card" mb-3>
    <div class="row">
        <div class="col-md-4">
            <img class="img-fluid" alt="" src="<%=blog.image%>">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%= blog.title %> </h5>
                <p class="card-text"><%= blog.description %></p>
                <p class="card-text">
                    <small class="text-muted"><%= blog.location%></small>
                </p>
                <a class="btn btn-primary" href="/blogs/<%=blog._id%>">View <%=blog.title%></a>
            </div>
        </div>
    </div>
</div>
<% }%>